<% if @proxy_caches -%>
<% @proxy_caches.each do |dir, conf| -%>
proxy_cache_path <%= dir %> <%= conf %>;
<% end -%>
<% end -%>
<% if @maps -%>
<% @maps.each do |conf| -%>
map <%= conf %>
<% end -%>
<% end -%>

server {
  listen 443 ssl http2;
  listen [::]:443 ssl;
  server_name  <%= Array(@server_name).join(" ") %>;

  ssl_protocols TLSv1.3;
  ssl_ecdh_curve X25519:secp384r1;
  ssl_conf_command Options PrioritizeChaCha;
  ssl_conf_command Ciphersuites TLS_CHACHA20_POLY1305_SHA256:TLS_AES_256_GCM_SHA384;
  add_header Strict-Transport-Security 'max-age=31536000; includeSubDomains; preload';

  <% if !@disable_default_location -%>
  location / {
    proxy_pass <%= @upstream_url %>;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Real-IP $remote_addr;
  }

  <% end -%>
  <% if @extra_config -%>
  <%= @extra_config %>

  <% end -%>
  access_log <%= @access_log %>;
  error_log  <%= @error_log %>;

  ssl_certificate     <%= @certificate_file %>;
  ssl_certificate_key <%= @certificate_key %>;

  <% if @cloudflare -%>
  include /etc/nginx/cloudflare.conf;
  <% end -%>
}

server {
  listen 80;
  listen [::]:80;
  server_name    <%= @server_name %>;
  location /.well-known/acme-challenge/ {
    proxy_pass http://127.0.0.1:<%= node["calculon"]["acme"]["lego"]["port"] %>;
    proxy_set_header Host $host;
  }
  location / {
    return 301 https://$host$request_uri;
  }
}
