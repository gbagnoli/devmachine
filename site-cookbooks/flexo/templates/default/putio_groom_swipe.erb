#!/bin/bash

set -eu

if [[ "$USER" != "<%= @user %>" ]]; then
  echo >&2 "Please run this script as user <%= @user %>"
  exit 1
fi

(
  flock -n 9 || exit 1
  echo "Downloading files"
  <%= @rclone %>

  echo "Grooming and removing remote files"
  <%= @putio %> transfers swipe
  exit $?
) 9>/run/lock/putio_groom_swipe
