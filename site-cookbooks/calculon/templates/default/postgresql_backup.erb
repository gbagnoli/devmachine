#!/bin/bash
set -euo pipefail
BACKUP_DIR="<%= @backup_dir %>"
TIMESTAMP=$(date +%Y%m%d_%H%M%S)

podman exec "<%= @container %>" pg_dump -p "<%= @db_port %>" -U "<%= @db_user %>" "<%= @db %>" | zstd -o "$BACKUP_DIR/<%= @db %>_$TIMESTAMP.sql.zst"

find "$BACKUP_DIR" -name "<%= @db %>_*.sql.zst" -mtime +7 -delete
